                  <span title="{{field.attachmentData.file_name}}">
                    {{field.attachmentData.file_name | limitTo:20}}{{field.attachmentData.file_name.length > 20 ? '...' : ''}}
                  </span>
                </td>
                <td class="width-10per field-actions">
                  <div class="action-menu">
                    <button class="action-btn" ng-click="c.editField(field); $event.stopPropagation()" title="Edit Field">
                      <i class="fas fa-edit"></i>
                    </button>
                    <button class="action-btn" ng-click="c.deleteField(field); $event.stopPropagation()" title="Delete Field">
                      <i class="fas fa-trash"></i>
                    </button>
                  </div>
