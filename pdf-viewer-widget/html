<!-- PDF Viewer Widget HTML Template -->
<!-- Updated to match combined widget design -->
<div class="pdf-viewer-widget">
  
  <!-- PDF Header -->
  <div class="pdf-header" ng-if="c.pdfLoaded">
    <div class="pdf-title">
      <i class="fa fa-file-pdf-o"></i>
      <span>{{c.documentName || 'Document'}}</span>
    </div>
    <div class="pdf-controls" ng-if="c.data.options.showControls">
      <button class="ctrl-btn" ng-click="c.previousPage()" ng-disabled="c.currentPage <= 1">
        <i class="fa fa-chevron-left"></i>
      </button>
      <span class="page-info">Page {{c.currentPage}} of {{c.totalPages}}</span>
      <button class="ctrl-btn" ng-click="c.nextPage()" ng-disabled="c.currentPage >= c.totalPages">
        <i class="fa fa-chevron-right"></i>
      </button>
    </div>
  </div>

  <!-- PDF Container -->
  <div id="pdfViewerContainer" class="pdf-container">
    
    <!-- Loading Overlay -->
    <div class="pdf-loading" ng-if="c.isPdfLoading">
      <div class="spinner"></div>
      <span>{{c.loadingMessage}}</span>
    </div>

    <!-- Error Message -->
    <div class="pdf-error" ng-if="c.errorMessage">
      <i class="fa fa-exclamation-triangle"></i>
      <span>{{c.errorMessage}}</span>
    </div>

    <!-- Empty State -->
    <div class="pdf-empty" ng-if="!c.pdfLoaded && !c.isPdfLoading && !c.errorMessage">
      <i class="fa fa-file-pdf-o"></i>
      <p>No document loaded</p>
    </div>

    <!-- PDF Canvas -->
    <div class="canvas-wrapper" ng-show="c.pdfLoaded">
      <canvas id="pdfViewerCanvas"></canvas>
      <canvas id="pdfAnnotationCanvas"></canvas>
    </div>
  </div>

  <!-- PDF Footer -->
  <div class="pdf-footer" ng-if="c.pdfLoaded">
    <span class="footer-info">
      <span class="page-size">{{c.pageWidth}} Ã— {{c.pageHeight}} points</span>
      <span class="scale-info">Scale: {{c.scalePercent}}%</span>
    </span>
  </div>

</div>
